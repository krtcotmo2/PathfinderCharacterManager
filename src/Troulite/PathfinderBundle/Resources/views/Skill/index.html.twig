{% extends '::base.html.twig' %}

{% block subtitle "Skills" %}

    {% block content -%}
        <div class="container">
            <table id="abilities" class="table table-striped table-hover table-responsive">
                <thead>
                <th>{{ 'skill'|trans }}</th>
                {% for class in classes %}
                    <th>{{ class|pftrans }}</th>
                {% endfor %}
                <th>{{ 'untrained'|trans }}</th>
                <th>{{ 'armor_check_penalty'|trans }}</th>
                <th>{{ 'key_ability'|trans }}</th>
                </thead>
                <tbody>
                {% for skill in skills %}
                    <tr>
                        <td>{{ skill|pftrans }}</td>
                        {% for class in classes %}
                            <td>{% if class.classSkills.contains(skill) %}C{% endif %}</td>
                        {% endfor %}
                        <td>{% if skill.untrained %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
                        <td>{% if skill.armorCheckPenalty %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
                        <td>{{ skill.keyAbility|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endblock %}