{% extends '::base.html.twig' %}

{% block content -%}
    <h1>{{ (entity ~ '.name')|trans({}, 'feats') }}</h1>

    {% if (entity ~ '.shortdesc')|trans({}, 'feats') != entity ~ '.shortdesc' %}
        <p><em>{{ (entity ~ '.shortdesc')|trans({}, 'feats')|raw }}</em></p>
    {% endif %}
    {% if (entity ~ '.longdesc')|trans({}, 'feats') != entity ~ '.longdesc' %}
        <p>{{ (entity ~ '.longdesc')|trans({}, 'feats')|raw }}</p>
    {% endif %}

    <dl class="dl-horizontal">
        {% if entity.prerequisities %}
            <dt>Prerequisities</dt>
            {% for key, prereq in entity.prerequisities %}
                <dd>{{ key }}: {{ prereq }}</dd>
            {% endfor %}
        {% endif %}

        {% if entity.effects %}
            <dt>Effects</dt>
            {% for key, effect in entity.effects %}
                <dd>{{ key }}: {{ effect.value }}{% if effect.type %} ({{ effect.type }}){% endif %}</dd>
            {% endfor %}
        {% endif %}

        {% if entity.conditions %}
            <dt>Conditions</dt>
            {% for key, condition in entity.conditions %}
                <dd>{{ key }}: {{ condition|join(", ") }}</dd>
            {% endfor %}
        {% endif %}

        {% if entity.externalConditions %}
            <dt>Externalconditions</dt>
            {% for key, conditions in entity.externalConditions %}
                <dd>{{ key }}: {{ condition|join(', ') }}</dd>
            {% endfor %}
        {% endif %}
    </dl>

    <ul class="record_actions">
        <li>
            <a href="{{ path('feats') }}">
                Back to the list
            </a>
        </li>
        <li><a href="{{ path('feats_edit', { 'id': entity.id }) }}">{{'edit'|trans  }}</a></li>
    </ul>
{% endblock %}
